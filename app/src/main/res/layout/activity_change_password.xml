<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChangePassword"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_margin="15dp">
    <ImageButton
        android:id="@+id/backBTn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/back_arrow"
        android:background="@color/transparent"
        android:layout_marginTop="10dp"
        />
    <LinearLayout
        android:id="@+id/changePassL1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/forgotPassImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/forgot_pass_img"
            />
        <ProgressBar
            android:id="@+id/changePassProgress"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/changePassTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="CHANGE PASSWORD"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="24sp"
            />
        <TextView
            android:id="@+id/changePassTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Enter your old password and set a new password"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/currentPassTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Current Password"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginStart="5dp"
            />
        <EditText
            android:id="@+id/currentPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/custom_edittxt"
            android:hint="Enter Current Password"
            android:maxLines="1"
            android:textColor="#A6A1A1"
            android:textSize="16sp"
            android:inputType="textPassword"
            />
        <TextView
            android:id="@+id/newPassTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="New Password"
            android:textColor="@color/light_grey"
            android:textSize="16sp"
            android:layout_gravity="left"
            android:layout_marginStart="5dp"
            />
        <EditText
            android:id="@+id/newPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:padding="15dp"
            android:background="@drawable/custom_edittxt"
            android:hint="Enter New Password"
            android:maxLines="1"
            android:textColor="#A6A1A1"
            android:textSize="16sp"
            android:inputType="textPassword"
            />
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/savePassBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/custom_start_button"
            android:text="Save"
            android:textColor="@color/white"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:textStyle="bold"
            android:drawableRight="@drawable/forward_next"
            android:textAlignment="center"
            />
    </LinearLayout>


</LinearLayout>