<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.SignUp"
    android:padding="30dp">
    <TextView
        android:id="@+id/create_acc_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create an account"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="24sp"
        />
    <TextView
        android:id="@+id/help_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/create_acc_txt"
        android:layout_marginTop="5dp"
        android:text="Let's help you setup your account,\nIt won't take long."
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/help_txt"
        android:layout_marginTop="15dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:padding="15dp"
        android:layout_below="@+id/name_txt"
        android:background="@drawable/custom_edittxt"
        android:hint="Enter Name"
        android:inputType="text"
        android:maxLines="1"
        android:textColor="#A6A1A1"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/email_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_name"
        android:layout_marginTop="15dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/user_Email1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:padding="15dp"
        android:layout_below="@+id/email_txt1"
        android:background="@drawable/custom_edittxt"
        android:hint="Enter Email"
        android:textColor="#A6A1A1"
        android:inputType="text"
        android:maxLines="1"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/password_txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_Email1"
        android:layout_marginTop="15dp"
        android:text="Enter Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/user_pass1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/password_txt1"
        android:background="@drawable/custom_edittxt"
        android:hint="Enter Password"
        android:textColor="#A6A1A1"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="textPassword"
        />
    <TextView
        android:id="@+id/cnfrm_pass_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/user_pass1"
        android:layout_marginTop="15dp"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        />
    <EditText
        android:id="@+id/cnfrm_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="7dp"
        android:layout_below="@+id/cnfrm_pass_txt"
        android:background="@drawable/custom_edittxt"
        android:hint="Enter Password"
        android:textColor="#A6A1A1"
        android:textSize="16sp"
        android:maxLines="1"
        android:inputType="textPassword"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cnfrm_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:background="@drawable/custom_start_button"
        android:text="Sign up"
        android:textColor="@color/white"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textStyle="bold"
        android:drawableRight="@drawable/forward_next"
        android:drawablePadding="10dp"
        />
    <View
        android:id="@+id/hor_line1"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@drawable/horizontal_line"
        android:layout_below="@id/sign_up"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="18dp"
        android:layout_toStartOf="@id/signinWith"
        />
    <TextView
        android:id="@+id/signinWith"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sign_up"
        android:layout_marginTop="10dp"
        android:text="or sign in with"
        android:textColor="@color/light_grey"
        android:textSize="12sp"
        android:layout_centerInParent="true"
        />
    <View
        android:id="@+id/hor_line2"
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@drawable/horizontal_line"
        android:layout_below="@id/sign_up"
        android:layout_marginTop="18dp"
        android:layout_toEndOf="@id/signinWith"
        android:layout_marginStart="5dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/google_btn_card"
        android:layout_width="44dp"
        android:layout_height="44dp"
        app:cardCornerRadius="10dp"
        android:layout_below="@id/hor_line1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        >
        <ImageButton
            android:id="@+id/google_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_icon"
            android:background="@drawable/custom_google_btn"
            android:layout_gravity="center"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/layout_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/google_btn_card"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/already_have_acc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Already a member?"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            />
        <TextView
            android:id="@+id/sign_in_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textColor="@color/orange"
            android:textStyle="bold"
            android:textSize="14sp"
            />
    </LinearLayout>
    <ProgressBar
        android:id="@+id/signUpProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/cnfrm_pass"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />
</RelativeLayout>